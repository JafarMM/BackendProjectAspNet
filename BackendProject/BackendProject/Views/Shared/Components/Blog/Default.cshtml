@model List<Blog>

@foreach (Blog item in Model)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-blog">

            <div class="blog-img">
                <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id"><img src="~/img/blog/@item.Image" alt="blog"></a>
                <div class="blog-hover">
                    <a href="blog-details.html"><i class="fa fa-link"></i></a>
                </div>
            </div>
            <div class="blog-content">
                <div class="blog-top">
                    <p>@item.Name / @item.Date  <i class="fa fa-comments-o"></i> 4</p>
                </div>
                <div class="blog-bottom">
                    <h2><a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id">@item.Description</a></h2>
                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id">read more</a>
                </div>
            </div>

        </div>
    </div>
}