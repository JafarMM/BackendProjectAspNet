@model List<Teacher>

@foreach (Teacher item in Model)
{

        <div class="col-md-3 col-sm-4 col-xs-12">
            <div class="single-teacher mb-45">
                <div class="single-teacher-img">
                    <a asp-controller="Teacher" asp-action="Details" asp-route-id="@item.Id"><img src="~/img/teacher/@item.Image" alt="teacher"></a>
                </div>
                <div class="single-teacher-content text-center">
                    <h2><a asp-controller="Teacher" asp-action="Details" asp-route-id="@item.Id">@item.Name</a></h2>
                    <h4>@item.Position.PositionName</h4>
                    <ul>
                        @foreach (SocialMedia item2 in item.SocialMedias)
                        {
                            <li><a href="@item2.Link"><i class="@item2.Icon"></i></a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
  
}

