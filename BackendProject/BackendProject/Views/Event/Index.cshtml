

@{
    ViewData["Title"] = "Index";
    List<UpCommingEvents> upCommingEvents = Model;
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>event</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Event Start -->
<div class="event-area three text-center pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search event</h3>
                </div>
                <div class="course-form">
                    <form id="search" action="#">
                        <input type="search" id="event-input-search" placeholder="Search..." name="search" />
                        <button type="submit">search</button>
                    </form>
                    <div id="searchResultEvent"></div>
                </div>
            </div>
            @foreach (var item in upCommingEvents)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-event mb-60">
                        <div class="event-img">
                            <a asp-controller="Event" asp-action="Details" asp-route-id="@item.Id">
                                <img src="~/img/event/@item.Image" alt="event">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                            <div class="event-date">
                                <h3>@item.Date</h3>
                            </div>
                        </div>
                        <div class="event-content text-left">
                            <h4><a href="event-details.html">@item.CourseName</a></h4>
                            <ul>
                                <li><span>time:</span> @item.Time</li>
                                <li><span>venue</span>@item.City</li>
                            </ul>
                            <div class="event-content-right">
                                <a class="default-btn" href="event-details.html">join now</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- Event End -->
 