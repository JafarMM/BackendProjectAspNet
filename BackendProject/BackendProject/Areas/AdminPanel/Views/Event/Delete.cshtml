
@{
    ViewData["Title"] = "Delete";
    UpCommingEvents events = Model;
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Delete Event</h4>
            <div class="row">
                <div class="col-md-12">
                    <img src="~/img/event/@events.Image" class="img-fluid" />
                </div>
                <div class="col-md-12">
                    <div class="item d-flex mt-2">
                        <h3>Title:</h3>
                        <span class="ml-2">@events.CourseName</span>
                    </div>
                    <div class="item d-flex mt-2">
                        <h3>Description:</h3>
                        <span class="ml-2">@events.EventDetails.Description</span>
                    </div>
                </div>
            </div>
            <p class="text-danger mt-3">Are you sure want to delete?</p>
            <hr />
            <form method="post">
                <a asp-action="Index" class="btn btn-primary">Go Back</a>
                <button type="submit" class="btn btn-danger ml-2">Delete</button>
            </form>
        </div>
    </div>
</div>