
@{
    ViewData["Title"] = "Slider Detail";
    Slider slider = Model;
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Slider Detail</h3>
                <div class="row">
                    <div class="col-md-12">
                        <img src="~/img/slider/@slider.Image" class="img-fluid" />
                    </div>
                    <div class="col-md-12">
                        <div class=" d-flex mt-2">
                            <h4>Title:</h4>
                            <span class="ml-2">@slider.Title</span>
                        </div>
                        <div class=" d-flex mt-3">
                            <h4>Description:</h4>
                            <span class="ml-2">@slider.Description</span>
                        </div>
                    </div>
                </div>
                <hr />
                <a asp-action="Index" class="btn btn-info text-light my-button">
                    <i class="mdi mdi-keyboard-backspace"></i> <span>Back</span>
                </a>
            </div>
        </div>
    </div>
</div>