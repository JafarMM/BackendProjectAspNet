
@{
    ViewData["Title"] = "Index";
    List<Teacher> teachers = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Courses</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var teacher in teachers)
                            {
                                <tr>
                                    <td>@teacher.Name</td>
                                    <td>
                                        <div class="modal-body">
                                            @foreach (var socialMedia in teacher.SocialMedias)
                                            {
                                                @if (socialMedia.IsDeleted == false)
                                                {
                                                    @if (teacher.Id == socialMedia.TeacherId)
                                                    {
                                                        <div class="d-flex justify-content-between mt-2">
                                                            <div>
                                                                <p>@socialMedia.Icon</p>
                                                            </div>
                                                            <div>
                                                                <a asp-action="Detail" asp-route-id="@socialMedia.Id" class="btn btn-success">Detail</a>
                                                                <a asp-action="Update" asp-route-id="@socialMedia.Id" class="btn btn-warning">Update</a>
                                                                <a asp-action="Delete" asp-route-id="@socialMedia.Id" class="btn btn-danger">Delete</a>
                                                            </div>
                                                        </div>
                                                    }
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
