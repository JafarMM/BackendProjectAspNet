
@{
    ViewData["Title"] = "Delete";
    Teacher teacher = Model;
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Delete Teacher</h4>
            <div class="row">
                <div class="col-md-12">
                    <img src="~/img/slider/@teacher.Image" class="img-fluid" />
                </div>
                <div class="col-md-12">
                    <div class="item d-flex mt-2">
                        <h4>Name:</h4>
                        <span class="ml-2">@teacher.Name</span>
                    </div>
                    <div class="item d-flex mt-2">
                        <h4>Position:</h4>
                        <span class="ml-2">@teacher.Position</span>
                    </div>
                    <div class="item d-flex mt-2">
                        <h4>Position:</h4>
                        <span class="ml-2">@teacher.TeacherDetails.Phone</span>
                    </div>
                    <div class="item d-flex mt-2">
                        <h4>Position:</h4>
                        <span class="ml-2">@teacher.TeacherDetails.Mail</span>
                    </div>
                </div>
            </div>
            <p class="text-danger mt-3">Are you sure for delete?</p>
            <hr />
            <form method="post">
                <a asp-action="Index" class="btn btn-primary">Go Back</a>
                <button type="submit" class="btn btn-danger ml-2">Delete</button>
            </form>
        </div>
    </div>
</div>