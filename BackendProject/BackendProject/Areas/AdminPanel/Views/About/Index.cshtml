@{
    ViewData["Title"] = "Index";
    About about = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body bg-dark font-weight-bold text-white">
                <h4 class="card-title text-white">About</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-white">Title</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-white">@Html.Raw(about.Title)</td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@about.Id" class="btn btn-success">Detail</a>
                                    <a asp-action="Update" asp-route-id="@about.Id" class="btn btn-warning">Update</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>