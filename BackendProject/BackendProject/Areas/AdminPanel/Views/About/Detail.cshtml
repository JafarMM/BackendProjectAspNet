@{
    ViewData["Title"] = "Detail";
    About about = Model;
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">About Detail</h3>
                <div class="row">
                    <div class="col-md-12">
                        <img src="~/img/about/@about.Image" class="img-fluid" />
                    </div>
                    <div class="col-md-12">
                        <div class="d-flex mt-2">
                            <h4>Title:</h4>
                            <span class="ml-2">@Html.Raw(about.Title)</span>
                        </div>
                        <div class=" d-flex mt-3">
                            <h4>Description:</h4>
                            <span class="ml-2">@Html.Raw(about.Description)</span>
                        </div>
                    </div>
                </div>
                <hr />
                <a asp-action="Index" class="btn btn-primary text-light my-button">
                     <span>Back</span>
                </a>
            </div>
        </div>
    </div>
</div>